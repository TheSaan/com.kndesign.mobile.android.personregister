                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Version 0.6.2"
                    android:id="@+id/textviewBuildNumber" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/AmountOfEntriesDesciption"
                    android:id="@+id/textviewAmountOfEntriesTitle" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/textviewAmountOfEntriesNumber" />
            </TableRow>


        </TableLayout>

