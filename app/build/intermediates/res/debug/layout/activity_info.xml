            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/buildNumberTitle"
                    android:id="@+id/textviewBuildNumberTitle" />
