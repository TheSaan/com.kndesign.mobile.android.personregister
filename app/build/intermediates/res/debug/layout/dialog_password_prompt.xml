<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.knoeflerdesign.keywest.PasswordPromptActivity"
    android:background="@drawable/general_background">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwdET"
        android:background="#F8E0E6"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Passwort" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/usernameET"

        android:layout_above="@+id/pwdET"
        android:layout_alignLeft="@+id/pwdET"
        android:layout_alignStart="@+id/pwdET"
        android:layout_alignRight="@+id/pwdET"
        android:layout_alignEnd="@+id/pwdET"
        android:hint="Benutzername"
        android:background="#F8E0E6"
        android:layout_marginBottom="10dp"
        android:height="60dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BestÃ¤tigen"
        android:id="@+id/checkB"
        android:textColor="#ffffff"
        android:background="@drawable/button_yellow_confirmed"
        android:layout_below="@+id/pwdET"
        android:layout_centerHorizontal="true"
        android:height="60dp"
        android:width="150dp"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abbrechen"
        android:id="@+id/cancelB"
        android:textColor="#ffffff"
        android:background="@drawable/button_yellow_confirmed"
        android:height="60dp"
        android:width="150dp"
        android:layout_alignTop="@+id/checkB"
        android:layout_alignRight="@+id/pwdET"
        android:layout_alignEnd="@+id/pwdET"
        android:visibility="gone" />

</RelativeLayout>
