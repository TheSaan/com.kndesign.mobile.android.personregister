<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="300dp" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.thesaan.android.business.austria.keywest.PasswordDialog"
    android:background="@drawable/general_background">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwdET"
        android:background="#F8E0E6"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Passwort"
        android:height="60dp"
        android:gravity="center_horizontal" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/usernameET"
        android:hint="Benutzername"
        android:background="#F8E0E6"
        android:height="60dp"
        android:text="security"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:layout_above="@+id/pwdET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BestÃ¤tigen"
        android:id="@+id/checkB"
        android:textColor="#ffffff"
        android:background="@drawable/button_yellow_confirmed"
        android:height="60dp"
        android:width="150dp"
        android:onClick="checkUserData"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp"
        android:layout_marginBottom="25dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abbrechen"
        android:id="@+id/cancelB"
        android:textColor="#ffffff"
        android:background="@drawable/button_yellow_confirmed"
        android:height="60dp"
        android:width="150dp"
        android:onClick="cancel"
        android:layout_alignTop="@+id/checkB"
        android:layout_alignRight="@+id/pwdET"
        android:layout_alignEnd="@+id/pwdET"
        android:layout_marginRight="87dp"
        android:layout_marginEnd="87dp" />

</RelativeLayout>
