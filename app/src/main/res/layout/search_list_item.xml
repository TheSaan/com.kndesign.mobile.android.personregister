<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:minHeight="48dp"
    android:id="@+id/list_item">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/thumbnailCD"
        android:src="@drawable/ic_person"
        />

    <TextView
        android:id="@+id/personDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17, Toni Burgstaller"
        android:textSize="48sp"
        />

    <ImageView
        android:id="@+id/bannedImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/bannedImageCD"
        android:src="@drawable/ic_house_banned_grey" />

    <ImageView
        android:id="@+id/detailsImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/detailsImageCD"
        android:src="@drawable/ic_info_grey"/>

</LinearLayout>