<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:minHeight="48dp"
    android:id="@+id/list_item"
    android:weightSum="1">
    
    <TextView
        android:id="@+id/personListIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="60sp"
        />
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/thumbnailCD"
        />
    <TextView
        android:id="@+id/personAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

    <TextView
        android:id="@+id/personFirstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

    <TextView
        android:id="@+id/personLastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp" />

    <ImageView
        android:id="@+id/bannedImage"
        android:visibility="visible"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/bannedImageCD"/>

    <ImageView
        android:id="@+id/detailsImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/detailsImageCD" />

</LinearLayout>